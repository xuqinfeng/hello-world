# 获取当前路径
os.getcwd()
# 获取当前路径下的文件
os.listdir(path)
# 删除文件
os.remove(filename)
# 重命名文件
os.rename(oldname,newname)
#创建新目录
os.mkdir()
#删除目录
os.rmdir()
#改变目录
os.chdir('E:\log')
# 操作系统命令
os.system(dir)
os.system(cmd)
#判断对象是否是目录
os.path.isdir(object)
#判断对象是否是文件
os.path.isfile(object)
#将文件名和后缀拆分
os.path.splitext('1.txt')
('1', '.txt')
